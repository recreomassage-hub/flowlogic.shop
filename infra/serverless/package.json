{
  "name": "flowlogic-serverless",
  "version": "1.0.0",
  "description": "Serverless Framework configuration for Flow Logic backend",
  "scripts": {
    "pre-deploy": "cd ../.. && ./scripts/validate-serverless-config.sh && ./scripts/bug-hunter.sh --mode fast",
    "pre-deploy:dev": "npm run pre-deploy",
    "pre-deploy:staging": "npm run pre-deploy",
    "pre-deploy:prod": "npm run pre-deploy",
    "deploy:dev": "npm run pre-deploy:dev && serverless deploy --stage dev",
    "deploy:staging": "npm run pre-deploy:staging && serverless deploy --stage staging",
    "deploy:prod": "npm run pre-deploy:prod && serverless deploy --stage prod",
    "post-deploy:dev": "cd ../.. && ./scripts/post_deploy.sh dev",
    "post-deploy:staging": "cd ../.. && ./scripts/post_deploy.sh staging",
    "post-deploy:prod": "cd ../.. && ./scripts/post_deploy.sh production",
    "remove:dev": "serverless remove --stage dev",
    "remove:staging": "serverless remove --stage staging",
    "remove:prod": "serverless remove --stage prod",
    "info:dev": "serverless info --stage dev",
    "info:staging": "serverless info --stage staging",
    "info:prod": "serverless info --stage prod",
    "logs:dev": "serverless logs -f api --stage dev --tail",
    "logs:staging": "serverless logs -f api --stage staging --tail",
    "logs:prod": "serverless logs -f api --stage prod --tail"
  },
  "devDependencies": {
    "serverless": "^4.0.0",
    "serverless-offline": "^14.4.0",
    "serverless-prune-plugin": "^2.1.0"
  }
}
